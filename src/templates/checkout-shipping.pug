extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Checkout'
  - var parentMenu = 'Shop'
  - var menuTitle = 'Shipping'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Checkout'}]

//- Page Content
block content
  .container.padding-bottom-3x.mb-2
    .row

      // Checkout Adress
      .col-xl-9.col-lg-8
        .checkout-steps
          a(href='checkout-review.html') 4. Review
          a(href='checkout-payment.html')
            span.angle
            | 3. Payment
          a(href='checkout-shipping.html' class='active')
            span.angle
            | 2. Shipping
          a(href='checkout-address.html' class='completed')
            span.angle
            span.step-indicator.icon-circle-check
            | 1. Address

        h4 Choose Shipping Method
        hr.padding-bottom-1x
        .table-responsive
          table.table
            thead.thead-default
              tr
                th Shipping method
                th Delivery time
                th Handling fee
                th
            tbody
              tr
                td.align-middle
                  span.text-medium Courier
                  br
                  span.text-muted.text-sm All Addresses(default zone), United States & Canada
                td.align-middle 2 - 4 days
                td.align-middle $22.50
                td.align-middle
                  label.custom-control.custom-radio
                    input(type='radio' name='shipping-method' checked).custom-control-input
                    span.custom-control-indicator
              tr
                td.align-middle
                  span.text-medium Local Shipping
                  br
                  span.text-muted.text-sm All Addresses(default zone), United States & Canada
                td.align-middle up to one week
                td.align-middle $10.00
                td.align-middle
                  label.custom-control.custom-radio
                    input(type='radio' name='shipping-method').custom-control-input
                    span.custom-control-indicator
              tr
                td.align-middle
                  span.text-medium Flat Rate
                  br
                  span.text-muted.text-sm All Addresses(default zone)
                td.align-middle 5 - 7 days
                td.align-middle $33.85
                td.align-middle
                  label.custom-control.custom-radio
                    input(type='radio' name='shipping-method').custom-control-input
                    span.custom-control-indicator
              tr
                td.align-middle
                  span.text-medium UPS Ground Shipping
                  br
                  span.text-muted.text-sm All Addresses(default zone)
                td.align-middle 4 - 6 days
                td.align-middle $18.00
                td.align-middle
                  label.custom-control.custom-radio
                    input(type='radio' name='shipping-method').custom-control-input
                    span.custom-control-indicator
              tr
                td.align-middle
                  span.text-medium Local Pickup from store
                  br
                  span.text-muted.text-sm All Addresses(default zone)
                td.align-middle &mdash;
                td.align-middle $0.00
                td.align-middle
                  label.custom-control.custom-radio
                    input(type='radio' name='shipping-method').custom-control-input
                    span.custom-control-indicator
              tr
                td.align-middle
                  span.text-medium Pick Up at Unishop Locker
                  br
                  span.text-muted.text-sm All Addresses(default zone), United States & Canada
                td.align-middle &mdash;
                td.align-middle $9.99
                td.align-middle
                  label.custom-control.custom-radio
                    input(type='radio' name='shipping-method').custom-control-input
                    span.custom-control-indicator
              tr
                td.align-middle
                  span.text-medium Unishop Global Export
                  br
                  span.text-muted.text-sm All Addresses(default zone), outside United States
                td.align-middle 3 - 4 days;
                td.align-middle $25.00
                td.align-middle
                  label.custom-control.custom-radio
                    input(type='radio' name='shipping-method').custom-control-input
                    span.custom-control-indicator

        .checkout-footer.margin-top-1x
          .column
            a(href='checkout-address.html' class='btn btn-outline-secondary')
              i.icon-arrow-left
              span.hidden-xs-down &nbsp;Back
          .column
            a(href='checkout-payment.html' class='btn btn-primary')
              span.hidden-xs-down Continue&nbsp;
              i.icon-arrow-right

      // Sidebar          
      .col-xl-3.col-lg-4
        include partials/checkout-sidebar    
    
