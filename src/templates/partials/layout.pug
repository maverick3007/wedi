doctype html
html(lang="en")

  //- head.pug template
  include head 
  
  // Body
  body

    //- modal-example.pug template
    if isModalExample
      include modal-example

    //- modal-ticket.pug template
    if isModalTicket
      include modal-ticket

    //- modal-order.pug template
    if isModalOrder
      include modal-order

    //- offcanvas.pug template
    include off-canvas

    //- topbar.pug template
    if isHeader
      include topbar
    if isWediHeader
      include wedi-topbar
    //- navbar.pug template
    if isHeader
      include navbar
    if isWediHomeHeader
      include wedi-navbar
    if isWediInnerHeader
      include wedi-navinner
    // Off-Canvas Wrapper
    .offcanvas-wrapper

      //- page-title.pug template
      if isPageTitle
        include page-title

      // Page Content
      block content

      //- footer.pug template
      if isFooter
        include footer
      if isWediFooter
        include wedi-footer

    //- photoswipe.pug template
    if isGallery
      include photoswipe
    
    // Back To Top Button
    a(href='#').scroll-to-top-btn
      i.icon-arrow-up

    // Backdrop
    .site-backdrop
    
    // JavaScript (jQuery) libraries, plugins and custom scripts
    script()&attributes(isNestedFile ? {'src': '../js/vendor.min.js'} : {'src': 'js/vendor.min.js'})
    if isCardScript
      script()&attributes(isNestedFile ? {'src': '../js/card.min.js'} : {'src': 'js/card.min.js'})
    script()&attributes(isNestedFile ? {'src': '../js/scripts.min.js'} : {'src': 'js/scripts.min.js'})
